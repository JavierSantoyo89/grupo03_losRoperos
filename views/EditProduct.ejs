<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>Agregar nuevo producto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin&family=Outfit:wght@100&family=Roboto:wght@100&display=swap" rel="stylesheet">   
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>        
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100&family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css" >
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css" >
    <link rel="stylesheet" href="/css/styles.css" >
</head>
    <body>

        <!-------------------------------------------------------------------------- Cabezal -------------------------------------------------------------------------->
        <%-include ("./partials/header.ejs") %>
        
        <!-------------------------------------------------------------------------- Banner --------------------------------------------------------------------------->
        <%-include ("./partials/banner.ejs") %>
        
        <!-------------------------------------------------------------------------- Main ----------------------------------------------------------------------------->
            <main>
                <div class="container products-wrapper">
                    <div class="row">
                      <div class="col-12">
                        <h2 class="products-title">Estás editando: <i><%= products.name %></i></h2>
                      </div>
                    </div>
                    <div class="col-12">
                      <form
                        action="/products/edit/<%= products.id %>"
                        method="POST"
                      >
                        <div class="row product-detail">
                          <div class="col-12 col-md-6">
                            <label for="name" class="form-label">Nombre del producto:</label>
                            <input
                              type="text"
                              id="name"
                              name="name"
                              placeholder="Ej: Zapatillas Reebok"
                              class="form-input"
                              value="<%= products.name %>"
                            />
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="model" class="form-label">Modelo del producto:</label>
                            <input
                              type="text"
                              id="model"
                              name="model"
                              placeholder="Ej: Zapatillas Reebok"
                              class="form-input"
                              value="<%= products.model %>"
                            />
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="brand" class="form-label">Marca del producto:</label>
                            <input
                              type="text"
                              id="brand"
                              name="brand"
                              placeholder="Ej: Zapatillas Reebok"
                              class="form-input"
                              value="<%= products.brand %>"
                            />
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="color" class="form-label">Color del producto:</label>
                            <input
                              type="text"
                              id="color"
                              name="color"
                              placeholder="Ej: Zapatillas Reebok"
                              class="form-input"
                              value="<%= products.color %>"
                            />
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="price" class="form-label">Precio del producto:</label>
                            <input
                              type="number"
                              id="price"
                              name="price"
                              placeholder="Ej: 5678"
                              class="form-input"
                              value="<%= products.price %>"
                            />
                          </div>
                          
                          <div class="col-12 col-md-6">
                            <label for="discount" class="form-label">Descuento:</label>
                            <input
                              type="number"
                              id="discount"
                              name="discount"
                              placeholder="Ej: 15"
                              class="form-input"
                              value="<%= products.discount %>"
                            />
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="size" class="form-label">Talla:</label>
                           
                            <select name="size" id="size" class="form-input">
                                <option value="">Elegí</option>
                                <option value="Ch">Chica</option>
                                <option value="M">Mediana</option>
                                <option value="G">Grande</option>
                              
                             </select>
                          </div>
                          <div class="col-12 col-md-6">
                            <label for="status" class="form-label">Categoría:</label>
                            <select name="status" id="status" class="form-input">
                                <option value="">Elegí</option>
                                <option value="In-sale">En oferta</option>
                                <option value="Season">Nueva Temporada</option>
                             
                            </select>
                          </div>
              
                          <div class="col-12">
                            <label for="description" class="form-label">Descripción:</label>
                            <textarea name="description" id="description" class="form-input">
                                <%= products.description %></textarea>
                          </div>
                          <div class="col-12">
                            <label for="img" class="form-label">Sube la imagen:</label>
                            <input type="file" name="img" id="file">
                        </div>
                          <div class="col-12">
                            <button type="submit" class="buy-now-button">
                              Guardar producto
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                
            </main>
        
        <!-------------------------------------------------------------------------- Footer -------------------------------------------------------------------------->
        <%- include('partials/footer') %>

    </body>
   <!-- http://localhost:1689/product/add -->
 </html>
 