<!DOCTYPE html>
<html lang="es">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin&family=Outfit:wght@100&family=Roboto:wght@100&display=swap" rel="stylesheet">   
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>        
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100&family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="../css/home.css" type="text/css" media="all">
    <link rel="stylesheet" href="../css/styles.css" type="text/css" media="all">
    <link rel="stylesheet" href="../css/bootstrap-grid.min.css" type="text/css" media="all">
    <title>Pricipal Los roperos</title>
</head>
    <body>
        <%- include('./partials/header') %>

        
        <div class="container products-wrapper">
            <div class = "row">
                <div class ="col-12">
                  <h2 class = "products-tittle">NUEVA TEMPORADA</h2>
                </div>
    <!-- SHOW NUEVA TEMPORADA PRODUCTS -->
                
                <% for (const product of season) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class = "product-box">
                            <a href="/products/detail/<%= product.id %>">
                                  <figure class="product-box_image">
                                    <img src= "/images/products/<%= product.img %> " alt= "imagen de producto"  width="150px" >
                                  </figure>
                                  <article class="product-box_data">                           
                                      <p><%= product.name %></p>
                                      <h3><%= product.price %></h3>

                                  </article>
                              </a>
                          </section>
                      </div>
                    
                <% } %>               
            </div>
        </div> 

        <div class="container products-wrapper">
            <div class = "row">
                <div class ="col-12">
                  <h2 class = "products-tittle">OFERTAS</h2>
                </div>
    <!-- SHOW INSALE PRODUCTS -->
                
                <% for (const product of inSale) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class = "product-box">
                            <a href="/products/detail/<%= product.id %>">
                                  <figure class="product-box_image">
                                    <img src= "/images/products/<%= product.img %> " alt= "imagen de producto" width="150px">
                                  </figure>
                                  <article class="product-box_data">
                                      <h3><%= product.price %></h3>
                                      
                                      <p><%= product.name %></p>
                                  </article>
                              </a>
                          </section>
                      </div>
                    
                <% } %>               
            </div>
        </div> 
        <%- include('./partials/footer') %>
    </body>
    
</html>
